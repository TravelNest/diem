{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"jsx": "react",
		"baseUrl": "./src",
		"outDir": "build/",
		"sourceMap": true,
		"allowJs": false,
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noErrorTruncation": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"declaration": true,
		"lib": [
			"dom",
			"es2016",
			"es2017.object"
		]
	},
	"exclude": [
		"node_modules",
		"build",
		"./test-store.ts",
		"**/*.test.ts",
		"**/__tests__/*.ts"
	],
	"types": [
		"typePatches"
	],
	"typeRoots": [
		"node_modules/@types",
		"types"
	]
}
